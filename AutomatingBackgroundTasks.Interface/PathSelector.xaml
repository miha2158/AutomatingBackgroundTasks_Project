<UserControl x:Class="AutomatingBackgroundTasks.Interface.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomatingBackgroundTasks.Interface"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="Thing" MaxLines="1" MinLines="1" TextChanged="Thing_OnTextChanged" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Button Grid.Column="1" Content="..." Click="Button_Click" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
